@model IList<Recipes>
@{
    ViewData["Title"] = "Home Page";
}


<style>


</style>

<body>
    <div >
        <div class="container-fluid">
                    <h2 align="center" style=" color: brown; "> Our Recipes- Your Meal Plan</h2>
            <div class="row">
                <div class=" col-md-4 ">
                    @{ foreach (Recipes recipe in Model)
                        {
                            <div class="inline-block" style="color: black; font-size: large; font-style: oblique;">


                                <p> @recipe.RecipeName</p>
                                <p>@recipe.RecipeDescription</p>
                                <p>@recipe.CaloriesPerServing Calories Per Serving</p>

                            </div>

                        }
                    }
                    <p>
                        <a href="/MealPlan/Index" class="btn btn-success" style="margin-left: 20%">Go To Your Meal Plan</a>
                      
                        <a href="/Account/Register" class="btn btn-warning" style="margin-left: 60%">Not Registered? Sign Up!</a>
                    </p>

                </div>
            </div>
        </div>





    </div>
</body>