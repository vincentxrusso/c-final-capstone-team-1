@model IList<Ingredients>
@{
    ViewData["Title"] = "GroceryListDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <h2 align="center" style="color: black; font-size: xx-large">Grocery List Detail</h2>
    <br />
    <br />
    <div class="container-fluid">
        <div class="row">
            <div>
                @{ foreach (Ingredients ingredients in Model)
                    {
                        <div class="col-md-12">
                            <img class="ingredientImage" src="@ingredients.IngredientImage" alt="Ingredient Image">
                            <div style="color: black; font-size: x-large; font-style: oblique;">
                                <p>@ingredients.IngredientName</p>                               
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
    <br />
    <br />
    <div>
        <p id="buttonOnGroceryListPage">
            <a href="/MealPlan/Index" class="btn btn-success" style="margin-left: 10%">My Meal Plan</a>
            <a href="/Recipe/Index" class="btn btn-primary" style="margin-left: 10%">All Recipes</a>
            <a href="/GroceryList/AddIngredient" class="btn btn-danger" style="margin-left: 10%">Add Ingredient To Grocery List</a>
            <a href="/Account/Register" class="btn btn-warning" style="margin-left: 10%">Not Registered? Sign Up!</a>
        </p>
    </div>
</body>