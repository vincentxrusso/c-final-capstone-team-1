@model AwesomeModel
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<style>
    div.background {
        height: 100%;
        width: 100%;
        background: linear-gradient(rgba(255,255,255,.3), rgba(255,255,255,.3)), url("https://cdn.hipwallpaper.com/i/35/78/jhYV6A.jpg");
        background-size: 100%;
        background-attachment: fixed;
    }
</style>

<body>
    <div class="background">
        <div>
            <h2 class="topRecipes" align="center" style="color:black; font-size: xx-large">@Model.Recipe.RecipeName Recipe Details</h2>
            <br />
            <br />
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="inline-block">
                            <p style="color: black; font-size: x-large; font-style: oblique; opacity: 0.8">Cook Time: @Model.Recipe.CookTime Min &nbsp;&nbsp;&nbsp;| &nbsp;&nbsp;&nbsp;Prep Time: @Model.Recipe.PrepTime Min</p>
                            <img class="detailRecipeImage" style="opacity: 0.8" src="@Model.Recipe.RecipeImage" alt="Recipe Image">
                        </div>
                    </div>
                </div>
                <br />
                <br />
                <div class="row">
                    <div class="col-md-12">
                        @{ foreach (Ingredients ingredient in Model.Ingredients)
                            {
                                <div class="inline-block">
                                    <p style="color: black; font-size: x-large; font-style: oblique; opacity: 0.8">@ingredient.IngredientName</p>
                                    <img class="ingredientImage" src="@ingredient.IngredientImage" alt="Ingredient Image">
                                </div>
                            }
                        }
                    </div>
                </div>
                <br />
                <br />
                <div class="row">
                    <div class="col-md-12">
                        @{ <table class="table table-striped table-dark">
                                <thead>
                                    <tr>
                                        <th scope="col" style="color:black">GlutenFree</th>
                                        <th scope="col" style="color:black">Vegetarian Friendly</th>
                                        <th scope="col" style="color:black">Vegan Friendly</th>
                                        <th scope="col" style="color:black">Dairy Free</th>
                                        <th scope="col" style="color:black">Nut Free</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>@Model.Recipe.GlutenFree</td>
                                        <td>@Model.Recipe.VegetarianFriendly</td>
                                        <td>@Model.Recipe.VeganFriendly</td>
                                        <td>@Model.Recipe.DairyFree</td>
                                        <td>@Model.Recipe.NutFree</td>
                                    </tr>
                                </tbody>
                            </table>
                        }
                    </div>
                </div>
                <br />
                <br />
                <div class="row">
                    <div class="col-md-12">
                        <p style="color:black; font-weight: bold; opacity: 0.8; font-size: larger"> @Model.Recipe.Instructions</p>
                    </div>
                </div>
            </div>
            <br />
            <br />
            <div>
                <p id="buttonOnAllRecipesPage">
                    <a href="/MealPlan/Index" class="btn btn-success" style="margin-left: 10%">My Meal Plan</a>
                    <a href="/Account/Register" class="btn btn-warning" style="margin-left: 10%">Not Registered? Sign Up!</a>
                </p>
            </div>
        </div>
    </div>
</body>