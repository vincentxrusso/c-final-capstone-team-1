@model IList<Recipes>
@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        height: 100%;
        width: 100%;
        background: linear-gradient(rgba(255,255,255,.3), rgba(255,255,255,.3)), url("https://wallpapershome.com/images/pages/pic_h/403.jpg");
        background-size: 100%;
        background-attachment: fixed;
    }
</style>

<body>
    <div class="topRecipes">
        <h2 align="center" style="color: black; font-size: xx-large">All Recipes</h2>
        <br />
        <br />
        <br />
        <div class="container-fluid">
            <div class="row">
                <div>
                    @{ foreach (Recipes recipe in Model)
                        {
                            <div class="col-md-12">
                                @*<a asp-controller="Recipe" asp-action="Detail" asp-route-RecipeId="@recipe.RecipeId">
                                    <p class="inline-block" style="color: black; font-size: x-large; font-style: oblique">@recipe.RecipeName - Details</p>

                                </a>*@
                                <p style="color:black; opacity: 0.9; font-size: 28px;"> @recipe.RecipeName</p>
                                <a href="/Recipe/Detail?RecipeId=@recipe.RecipeId">
                                    <img class="recipeImage" style="opacity: 0.9" src="@recipe.RecipeImage" alt="Recipe Image">
                                </a>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
        <br />
        <br />
        <br />
        <div>
            <p id="buttonOnAllRecipesPage">
                <a href="/MealPlan/Index" class="btn btn-success" style="margin-left: 10%">My Meal Plan</a>
                <a href="/Account/Register" class="btn btn-warning" style="margin-left: 10%">Not Registered? Sign Up!</a>
            </p>
        </div>
    </div>
</body>