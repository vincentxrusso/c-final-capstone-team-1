<style>
    body {
        height: 100%;
        width: 100%;
        background-image: url("https://wallpaper.wiki/wp-content/uploads/2017/04/wallpaper.wiki-HD-Pictures-Food-PIC-WPD006582.jpg");
        background-size: 100%;
        background-attachment: fixed;
        $enable-shadows: true;
    }
</style>

<body>
    <div class="topRecipes">
        <h2 class = "shadow-lg" align="center" style="color: orange; font-size: xx-large"> Welcome to the Capstone Meal Planner</h2>
        <br />
        <br />
        <br />
        <div class="container-fluid">
            <div class="row">
                <div>
                    @{ foreach (Recipes recipe in Model)
                        {
                            <div class="col-md-4">
                                <a href="/Recipe/Detail">
                                    <img class="recipeImage" src="@recipe.RecipeImage" alt="Recipe Image">
                                </a>
                                <div class="inline-block" style="color: orange; font-size: x-large; font-style: oblique;">
                                    <p>@recipe.RecipeName</p>
                                    <p>@recipe.CookTime minutes of cook time.</p>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
        <div>
            <p id="buttonOnHomePage">
                <a href="/MealPlan/Index" class="btn btn-success" style="margin-left: 10%">My Meal Plan</a>
                <a href="/Recipe/Index" class="btn btn-primary" style="margin-left: 27%">All Recipes</a>
                <a href="/Account/Register" class="btn btn-warning" style="margin-left: 29%">Not Registered? Sign Up!</a>
            </p>
        </div>
    </div>
</body>